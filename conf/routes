# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Searching Feature
GET     /v1/company/:companyNumber  controllers.v1.SearchController.getCompanyById(companyNumber)
GET     /v1/vat/:vatRef             controllers.v1.SearchController.getVatById(vatRef)
GET     /v1/paye/:payeRef           controllers.v1.SearchController.getPayeById(payeRef)
GET     /                           controllers.HomeController.status

# Route for deployed version information (in JSON).
GET     /version                    controllers.VersionController.version

# Route for health check information (in JSON).
GET     /health                     controllers.HealthController.health

# Api documentation
GET     /swagger.json              controllers.ApiHelpController.getResources
GET     /docs                      controllers.HomeController.swagger

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
